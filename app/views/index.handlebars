
<head>
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>{{title }}</title>
  {{> essentials}}
  <link rel="stylesheet" href="/css/style.css">

  {{#if ENV_DEVELOPMENT}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>
<body>
<header>
  <div class="container-fluid" style="display:flex; flex-direction:column">

    <img id="logo" src="/img/logo.png" class="center-block glowing" alt="ExxonMobil Logo">

     <!-- <h1 class="quizmania">QUIZMANIA</h1> -->
    {{#if user}}
      <h1>{{user.firstName}} {{user.lastName}}</h1>

    {{else}}

    <div id="mobile-only">
      <input style="display:none" type="text" name="fakeusernameremembered"/>
      <input style="display:none" type="password" name="fakepasswordremembered"/>

      <p><h1><span id="login_text" class="check_text0">Login</span> <img id="check" src="../img/gaspistol_red.png" /> <span class="check_text1" id="reg_text">Register</span></h1></p>
      <form id="log_reg" style="width:95%">
        <span id="err">*Must be a valid exxonmobil email</span>
      <input class="center-block login_form" type="text" name="email" readonly onfocus="this.removeAttribute('readonly')" size="45"  placeholder="E-Mail Address" style="width:50%"><br>
      <input class="center-block login_form" name="password" type="password" size="45" placeholder="Password" style="width:50%"><br>
        <div class="form-inline">
          <span class="reg" style="display:none">You are registering as:</span><br>
          <span class="reg" style="display:none"><span id="as_user" class="reg_selected" style="margin-right:10%;">User</span><span id="as_admin" class="reg_unselected">Admin</span></span><br>
          <input class="reg reg_fields login_form" name="firstName" style="margin-bottom:0.5em;display:none" type="text" placeholder="First name" >
          <input class="reg reg_fields  login_form" name="lastName" style="margin-bottom:3%;display:none" type="text" placeholder="Last name" ><br>
        </div>
        <input id="submit_btn" type="button" value="Submit" name="button"/>
      </form>
      <div class="row">


      </div>

    </div>
    {{/if}}


 </div>
</header>
</body>
