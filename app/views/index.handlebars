<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{{title }}</title>
  <link href="https://fonts.googleapis.com/css?family=Pangolin" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">

  <link href="css/jquery.funnyText.css" rel="stylesheet">



  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  <link rel="stylesheet" href="/css/style.css">
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="js/jquery.funnyText.min.js" type="text/javascript"></script>

  <script src="js/index_ctrl.js" type="text/javascript"></script>


  {{#if ENV_DEVELOPMENT}}
    <script src="http://localhost:35729/livereload.js"></script>
  {{/if}}
</head>
<body>
<header>
  <div class="container-fluid" style="display:flex; flex-direction:column">
      {{#if user}}
        <a style="float:right" href="/logout"> <button type="button" class="btn btn-primary" name="button">Logout</button></a>
        {{/if}}

    <img id="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/18/Exxon_Mobil_Logo.svg/2000px-Exxon_Mobil_Logo.svg.png" class="center-block glowing" alt="ExxonMobil Logo">

     <!-- <h1 class="quizmania">QUIZMANIA</h1> -->

    {{#if user}}
      <h1>{{user.firstName}} {{user.lastName}}</h1>
    {{/if}}
    <div class="row">
      <!-- <div class="col-xs-6">
        <button type="`button`" class="butt center-block animated  tada" name="button" data-toggle="modal" href="#login_div">Login</button>
      </div>
      <div class="col-xs-6">
        <button type="`button`" class="butt center-block animated infinite tada" name="button" data-toggle="modal" href="#register_div">Register</button>
      </div> -->
      <input style="display:none" type="text" name="fakeusernameremembered"/>
      <input style="display:none" type="password" name="fakepasswordremembered"/>
      <input class="center-block login_form" type="text" name="" size="45" value="" placeholder="E-Mail Address"><br>
      <input class="center-block login_form" type="password" size="45" placeholder="Password"><br>
      <div class="row">
        <div class="col-xs-4"></div>
        <div class="col-xs-2" style="border-right:1px solid rgba(0,0,200,0.4)">
          <button id="login_btn" type="button" name="button">LOGIN</button>
        </div>
        <div class="col-xs-2">
          <button id="reg_btn" type="button" name="button">REGISTER</button>
        </div>
        <div class="col-xs-4">

        </div>
      </div>

    </div>

      <div id="login_div" class="modal fade shake page" role="dialog">
        <div class="modal-dialog">
        <div class="modal-content login_modal">

          <div id="login_modal" class="modal-body">
            <h1 class="modal-header">Login</h1><br />
          <span id="login_error" style="color:#cc0000">
          </span>
            <br />
            <form id="login_form" >
             <input id="login_email" class="form-control login_search" name="email" placeholder="example@exxon.com" autofocus required /><br />
             <a style="float:right;cursor:pointer" data-toggle="modal" data-target="#forgot-password">Forgot your password?</a>
             <input id="login_password" class="form-control login_search" name="password" placeholder="Password" type="password" required /><br />
             <input id="login_btn" type="button" value="Login" class="btn"/>
           </form>

          </div>
        </div>
       </div>
    </div>

    <div id="register_div" class="modal fade shake page" role="dialog">
      <div class="modal-dialog">
      <div class="modal-content register_modal">

        <div  id="modal" class="modal-body">
          <h1 class="modal-header">Register</h1><br />
        <span>
          {{error_login}}
        </span>
          <br />
          <form id="yo" action="/signup" method="POST" novalidate>
            <input class="form-control register_search" name="firstName" placeholder="First Name" autofocus required /><br />
            <input class="form-control register_search" name="lastName" placeholder="Last Name" autofocus required /><br />
            <input class="form-control register_search" name="email" placeholder="Email" autofocus required /><br />
            <input class="form-control register_search" name="password" placeholder="Password" type="password" required /><br />
            <div class="form-inline">
              Normal <input type="radio" name="role" value="user">
              Admin <input type="radio" name="role" value="admin">
            </div>
           <button id="signup_btn" class="home_submit btn" type="submit" >Sign Up</button><br />
          </form>
        </div>
      </div>
     </div>
   </div>
 </div>
</header>
</body>
