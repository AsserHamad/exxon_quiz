<link rel="stylesheet" href="css/leaderboards.css">
<script type="text/javascript">
  var results
  $.get("/leaderboards")
    .done((res) => {
      var first = true;
      for(var i=0;i<res.values.length && i<5;i++) {
        if(first){first=false;$("#allTimeTopScore").html(Math.floor(res.values[i].score));}
        console.log(res.values[i]);
        $("#name_"+i).html(res.values[i].quizTaker.fullName);
        $("#score_"+i).html(Math.floor(res.values[i].score));
      }
    })
    .fail((err) => {

      $("#allTimeTopScore").html('0');
      console.log("ERROR LOOOOOOOOOOOOOOOOOL")
      for(var i=0;i<5;i++) {
        if(first){first=false;}
        $("#name_"+i).html("");
        $("#score_"+i).html("");
      }
    })

</script>
